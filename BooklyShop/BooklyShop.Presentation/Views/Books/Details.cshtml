@model BooklyShop.Presentation.Models.BookViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="mb-3">
    <a class="btn btn-link px-0" asp-action="Index">Back to shop</a>
</div>

<div class="row g-4">
    <div class="col-12 col-lg-8">
        <h1 class="h3">@Model.Title</h1>
        <div class="text-muted mb-2">by @Model.Author</div>
        @if (!string.IsNullOrWhiteSpace(Model.Category))
        {
            <span class="badge text-bg-light">@Model.Category</span>
        }

        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <p class="mt-3">@Model.Description</p>
        }
    </div>

    <div class="col-12 col-lg-4">
        <div class="border rounded p-3">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="text-muted">Price</div>
                <div class="fs-4 fw-semibold">@Model.Price.ToString("0.00")</div>
            </div>

            <form asp-action="AddToCart" asp-route-id="@Model.Id" method="post" class="d-grid gap-2">
                @Html.AntiForgeryToken()
                <div>
                    <label class="form-label" for="qty">Quantity</label>
                    <input id="qty" name="quantity" type="number" value="1" min="1" class="form-control" />
                </div>
                <button type="submit" class="btn btn-dark">Add to cart</button>
                <a class="btn btn-outline-dark" asp-controller="Cart" asp-action="Index">Go to cart</a>
            </form>
        </div>
    </div>
</div>
