@model BooklyShop.Presentation.Models.CartViewModel

@{
    ViewData["Title"] = "Cart";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Your cart</h1>
    <a class="btn btn-outline-dark" asp-controller="Books" asp-action="Index">Continue shopping</a>
</div>

@if (!Model.Lines.Any())
{
    <div class="alert alert-info">
        Your cart is empty.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Book</th>
                    <th style="width: 140px;">Price</th>
                    <th style="width: 220px;">Quantity</th>
                    <th style="width: 140px;">Total</th>
                    <th style="width: 120px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model.Lines)
                {
                    <tr>
                        <td>
                            <div class="fw-semibold">@line.Book.Title</div>
                            <div class="text-muted">@line.Book.Author</div>
                        </td>
                        <td>@line.Book.Price.ToString("0.00")</td>
                        <td>
                            <form asp-action="Update" method="post" class="d-flex gap-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="bookId" value="@line.Book.Id" />
                                <input type="number" name="quantity" value="@line.Quantity" min="0" class="form-control" />
                                <button type="submit" class="btn btn-outline-primary">Update</button>
                            </form>
                        </td>
                        <td>@line.LineTotal.ToString("0.00")</td>
                        <td>
                            <form asp-action="Remove" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="bookId" value="@line.Book.Id" />
                                <button type="submit" class="btn btn-outline-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end fw-semibold">Grand total</td>
                    <td class="fw-semibold">@Model.Total.ToString("0.00")</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <form asp-action="Clear" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-secondary">Clear cart</button>
        </form>
        <button type="button" class="btn btn-dark" disabled>Checkout (next)</button>
    </div>
}
